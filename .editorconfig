# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
indent_style             = space
max_line_length          = 80
trim_trailing_whitespace = false
indent_style             = space

[*.{php,py}]
indent_style = space
indent_size = 4

[*.php]
trim_trailing_whitespace=true

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
